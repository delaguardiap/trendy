<%= render "partials/header"%>

<h1 class=title>T R N D I</h1>

<%= form_tag("/search", method: "post") do %>
  <%= text_field_tag(:chicken) %>
  <%= submit_tag "Search", id: "search_button" %>
<% end %>



<% if @bars %>
	<% @bars.each do |bar| %>
		<%= link_to venue_path(bar) do %>
		 	<div class="venue">
		 	<ul>
 		 		<li>Name: <%= bar.name %></li>
 		 		<li>Address: <%= bar.address %></li>
 		 		<li>Rating: <%= bar.rating %></li>
 		 		<li>Check ins: <%= bar.check_ins.count %></li>
 		 		<%if bar.price == nil%>
	 		 			<li>Price: <%= "Unknown" %></li>
	 		 		<%elsif bar.price == 0%>
	 		 			<li>Price: <%= "Free" %></li>
	 		 		<%else%>
	 		 			<li>Price: <%= "$" * bar.price %></li>
 		 		<%end%>
 			</ul>
 			</div>
		<%end%>
	<% end %>
<%end%>
