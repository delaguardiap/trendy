$(function(){
	
	var checkInClicked = true;
	$("#check_in_link").on('click', function(){
		if(checkInClicked) {
			checkInClicked = false;
			$("#check-in-form").slideDown(400);
		} else {
			checkInClicked = true;
			$("#check-in-form").slideUp(400);	
		}
	});

	var displayCheckIn = true;
	$("#check_ins").on('click', function(){
		if(displayCheckIn) {
			displayCheckIn = false;
			$("#active_checkIns").slideDown(400);
			$("#recent-tweets").slideUp(2000);
		} else{
			displayCheckIn = true;
			$("#active_checkIns").slideUp(2000);
		}
	});

	var displayTweets = true;
	$("#tweets-galore").on('click', function(){
		if(displayTweets) {
			displayTweets = false;
			$("#recent-tweets").slideDown(2000);
			$("#active_checkIns").slideUp(400);
		} else{
			displayTweets = true;
			$("#recent-tweets").slideUp(2000);
		}
	});
	
});