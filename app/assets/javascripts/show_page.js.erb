$(function(){
	
	var checkInClicked = true;
	$("#check_in_link").on('click', function(){
		if(checkInClicked) {
			checkInClicked = false;
			$("#check-in-form").slideDown(800);
		} else {
			checkInClicked = true;
			$("#check-in-form").slideUp(800);	
		}
	});

	var displayCheckIn = true;
	$("#check_ins").on('click', function(){
		if(displayCheckIn) {
			displayCheckIn = false;
			$("#active_checkIns").slideDown(800);
			$("#recent-tweets").slideUp(800);
		} else{
			displayCheckIn = true;
			$("#active_checkIns").slideUp(800);
		}
	});

	var displayTweets = true;
	$("#tweets-galore").on('click', function(){
		if(displayTweets) {
			displayTweets = false;
			$("#recent-tweets").slideDown(800);
			$("#active_checkIns").slideUp(800);
		} else{
			displayTweets = true;
			$("#recent-tweets").slideUp(800);
		}
	});
	
});